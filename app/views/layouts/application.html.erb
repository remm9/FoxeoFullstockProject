<!DOCTYPE html>
<html>
  <head>
    <title>FoxeoFullstockProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('foxeo_logo.png') %>";
    </script>
    <script type="text/javascript">
      window.smileyURL = "<%= image_url('Smiley.png') %>";
    </script>
    <script type="text/javascript">
      window.vertovURL = "<%= image_url('vertov.png') %>";
    </script>
     <script type="text/javascript">
      window.gitLogoURL = "<%= image_url('GitHub_Logo.png') %>";
    </script>
     <script type="text/javascript">
      window.linkSmallURL = "<%= image_url('linkedin_small.png') %>";
    </script>
    <script type="text/javascript">
      window.gitWhiteURL = "<%= image_url('github.png') %>";
    </script>
    <script type="text/javascript">
      window.linkSplashURL = "<%= image_url('linkedin-splash.png') %>";
    </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>", // is user name needed????
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
