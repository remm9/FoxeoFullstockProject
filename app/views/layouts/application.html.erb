<!DOCTYPE html>
<html>
  <head>
    <title>Foxeo</title>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('foxeo_logo.png') %>";
    </script>
    <script type="text/javascript">
      window.smileyURL = "<%= image_url('Smiley.png') %>";
    </script>
    <script type="text/javascript">
      window.vertovURL = "<%= image_url('vertov.png') %>";
    </script>
     <script type="text/javascript">
      window.gitLogoURL = "<%= image_url('GitHub_Logo_White.png') %>";
    </script>
     <script type="text/javascript">
      window.linkSmallURL = "<%= image_url('linkedin_small.png') %>";
    </script>
    <script type="text/javascript">
      window.gitBlackURL = "<%= image_url('GitHub_Logo.png') %>";
    </script>
    <script type="text/javascript">
      window.linkSplashURL = "<%= image_url('linkedin-logo.png') %>";
    </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        };
      </script>
    <% end %>
    <meta property="og:title" content="Bubble Pop" />
    <meta property="og:description" content="Bubble Pop is a Puzzle Bobble or Bust-A-Move clone written in JavaScript and HTML" />
    <meta property="og:url" content="https://lordrickyz.github.io/bubble-pop/" />
    <meta property="og:image" content="https://lordrickyz.github.io/bubble-pop/dist/preview/bubbleLink.gif" />
  </head>

  <body>
    <%= yield %>
  </body>
</html>
